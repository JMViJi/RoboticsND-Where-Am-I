<?xml version='1.0'?>

<robot name="my_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">


<xacro:property name="wheel_radius" value="0.075" />
<xacro:property name="wheel_length" value="0.05" />
<xacro:property name="wheel_mass" value="5" />


<xacro:include filename="$(find my_robot)/urdf/my_robot.gazebo" />


 <link name="robot_footprint"></link>

  <joint name="robot_footprint_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="robot_footprint"/>
    <child link="chassis" />
  </joint>

  <link name='chassis'>
    <pose>0 0 0.05 0 0 0</pose>

    <inertial>
      <mass value="15.0"/>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>

    <collision name='collision'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/> 
      <geometry>
        <cylinder length="0.15" radius="0.23"/>
      </geometry>
    </collision>

    <visual name='chassis_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <cylinder length="0.15" radius="0.23"/>
      </geometry>
    </visual>

    <collision name='back_caster_collision'>
      <origin xyz="-0.17 0 -0.05" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
    </collision>

    <visual name='back_caster_visual'>
      <origin xyz="-0.17 0 -0.05" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
    </visual>

    <collision name='front_caster_collision'>
      <origin xyz="0.17 0 -0.05" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
    </collision>

    <visual name='front_caster_visual'>
      <origin xyz="0.17 0 -0.05" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
    </visual>
  </link>

	<gazebo reference="chassis">
		<material>Gazebo/Blue</material>
	</gazebo>


  <!--Links-->

  <!--Left wheel-->
  <link name="left_wheel">
    <inertial>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>      
      <mass value="${wheel_mass}"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>


    <visual name="left_wheel_visual">
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>      
      <geometry>
        <cylinder length="${wheel_length}" radius="${wheel_radius}"/>
      </geometry>
    </visual>

    <collision name="left_wheel_collision">
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>      
      <geometry>
        <cylinder length="${wheel_length}" radius="${wheel_radius}"/>
      </geometry>
    </collision>
  </link>

  <joint type="continuous" name="left_wheel_hinge">
    <origin xyz="0 0.26 -0.025" rpy="0 0 0"/>
    <child link="left_wheel"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>

	<gazebo reference="left_wheel">
		<material>Gazebo/Green</material>
	</gazebo>

  <!--Right wheel-->
  <link name="right_wheel">
    <inertial>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>      
      <mass value="${wheel_mass}"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>


    <visual nme="right_wheel_visual">
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>      
      <geometry>
        <cylinder length="${wheel_length}" radius="${wheel_radius}"/>
       </geometry>
    </visual>

    <collision name="right_wheel_collision">
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>      
      <geometry>
        <cylinder length="${wheel_length}" radius="${wheel_radius}"/>
      </geometry>
    </collision>
  </link>

  <joint type="continuous" name="right_wheel_hinge">
    <origin xyz="0 -0.26 -0.025" rpy="0 0 0"/>
    <child link="right_wheel"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>


	<gazebo reference="right_wheel">
		<material>Gazebo/Green</material>
	</gazebo>


  <!--Camera-->
  <link name="camera">

    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>      
	    <mass value="0.1"/>
      <geometry>
        <box size="0.05 0.05 0.05"/>
      </geometry>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6"/>
    </inertial>


    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>      
      <geometry>
        <box size="0.05 0.05 0.05"/>
      </geometry>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>      
      <geometry>
        <box size="0.05 0.05 0.05"/>
      </geometry>
    </collision>

  </link>

  <joint type="fixed" name="camera_joint">
    <origin xyz="0.21 0 0.04" rpy="0 0 0"/>
    <parent link="chassis"/>
    <child link="camera"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
  </joint>

	<gazebo reference="camera">
		<material>Gazebo/Red</material>
	</gazebo>


  <!--Lidar-->
  <link name="hokuyo">

    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>      
	    <mass value="1e-5"/>
      <geometry>
                <mesh filename="package://my_robot/meshes/hokuyo.dae"/>
      </geometry>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6"/>
    </inertial>

    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>      
      <geometry>
        <mesh filename="package://my_robot/meshes/hokuyo.dae"/>
      </geometry>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>      
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </collision>
  </link>

  <joint type="fixed" name="hokuyo_joint">
    <origin xyz="0.23 0 -0.03" rpy="0 0 0"/>
    <parent link="chassis"/>
    <child link="hokuyo"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
  </joint>
  
  <gazebo reference="hokuyo">
		<material>Gazebo/Black</material>
	</gazebo>

</robot>
